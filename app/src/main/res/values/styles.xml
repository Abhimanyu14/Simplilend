<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/app_bar</item>
        <item name="colorPrimary">@color/action_bar</item>
        <item name="colorAccent">@color/action_bar</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="HomeStyle" parent="AppTheme">
        <item name="colorPrimaryDark">@color/app_bar</item>
        <item name="colorPrimary">@color/action_bar</item>
        <item name="colorAccent">@color/action_bar</item>
        <item name="elevation">0dp</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="MyNavigationDrawer" parent="HomeStyle">
        <item name="colorPrimaryDark">@android:color/transparent</item>
    </style>

    <style name="SignInStyle" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/sign_in</item>
    </style>

    <style name="TabStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/unselected_text</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="SignInStyle.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="SignInStyle.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
